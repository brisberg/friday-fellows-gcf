{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "rm -rf lib/ && tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "npm run build && FIRESTORE_EMULATOR_HOST='localhost:8080' firebase emulators:exec --only firestore 'npm run test:jest'",
    "test:jest": "node_modules/.bin/jest --coverage",
    "test:load_data": "node -e 'require(\"./lib/testing/loadTestData\").loadTestDataToFirestore()'",
    "test:dump_data": "node -e 'require(\"./lib/testing/dumpTestData\")'",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/node": "~10.17.26",
    "@types/node-fetch": "^2.5.7",
    "cors": "^2.8.5",
    "firebase-admin": "^9.0.0",
    "firebase-functions": "^3.8.0",
    "gaxios": "^3.0.4",
    "googleapis": "^56.0.0",
    "node": "^10.21.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.9",
    "@types/jest": "^26.0.7",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.6.0",
    "jest": "^26.1.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock": "^26.1.0",
    "ts-jest": "^26.1.3",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "private": true
}
