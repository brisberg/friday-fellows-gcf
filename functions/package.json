{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "rm -rf lib/ && tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "npm run build && FIRESTORE_EMULATOR_HOST='localhost:8080' firebase emulators:exec --only firestore 'npm run test:jest'",
    "test:jest": "node_modules/.bin/jest --coverage",
    "test:load_data": "node -e 'require(\"./lib/testing/loadTestData\").loadTestDataToFirestore()'",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/firestore": "^2.6.0",
    "@types/cors": "^2.8.6",
    "@types/glob": "^7.1.1",
    "@types/node": "^12.12.11",
    "camelcase": "^5.3.1",
    "cors": "^2.8.5",
    "firebase-admin": "^8.8.0",
    "firebase-functions": "^3.3.0",
    "firestore-admin": "^1.3.0",
    "gaxios": "^2.1.0",
    "glob": "^7.1.6",
    "googleapis": "^45.0.0",
    "node": "^8.13.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "firebase-functions-test": "^0.1.7",
    "firebase-tools": "^7.8.1",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.2.2"
  },
  "private": true
}
